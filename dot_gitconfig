[user]
	email = claughinghouse@users.noreply.github.com
	name = claughinghouse
	signingkey = ~/.ssh/id_ed25519_githubSigningKey.pub
[init]
	defaultBranch = main
[gpg]
	format = ssh
[commit]
	gpgsign = true

[alias]
	yolo = !git add -A && git commit -m \"$(curl --silent --fail https://timmoc.dev)\"
	yeet = !git yolo && git push
	cleanup = "!git fetch -p && for branch in $(git branch -vv | grep ': gone]' | awk '{print $1}'); do git branch -D $branch; done"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	autoSetupRemote = true
[diff "lockb"]
	textconv = bun
	binary = true
